<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".GameActivity">

    <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp" app:srcCompat="@drawable/ic_image_black_24dp"
            android:id="@+id/img_game"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.488"
    />
    <TextView
            android:text="@string/txt_descr_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_descr_game" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/img_game" android:textAlignment="center"
            android:textStyle="bold" android:textSize="24sp" android:textColor="@color/cardview_light_background"
            app:layout_constraintVertical_bias="1.0"/>
    <CheckBox
            android:text="CheckBox"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="30dp" android:id="@+id/box_alt1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/img_game" android:textSize="18sp"
            android:fontFamily="monospace"/>
    <CheckBox
            android:text="CheckBox"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="30dp" android:id="@+id/box_alt2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/box_alt1" android:textSize="18sp" android:fontFamily="monospace"/>
    <CheckBox
            android:text="CheckBox"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="30dp" android:id="@+id/box_alt3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/box_alt2" android:textSize="18sp"
            android:fontFamily="monospace"/>
    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/txt_game_score" android:fontFamily="monospace"
            android:textSize="18sp" android:textColor="@color/cardview_light_background"
            android:layout_width="match_parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/box_alt3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.145"/>
    <Button
            android:text="@string/btn_game_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_game_enter"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.925"/>
</android.support.constraint.ConstraintLayout>