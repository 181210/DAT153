<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SplashActivity">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="360dp" tools:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/img_splash" android:layout_marginTop="8dp"
            android:contentDescription="Splash Icon"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_splash"/>
    <TextView
            android:text="Loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_splash"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:textColor="@android:color/background_light" android:textStyle="bold" android:textAlignment="center"
            android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>