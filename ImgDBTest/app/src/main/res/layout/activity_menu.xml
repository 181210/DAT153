<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MenuActivity">

    <ImageView
            android:layout_width="251dp"
            android:layout_height="252dp" app:srcCompat="@drawable/ic_launcher_foreground"
            android:id="@+id/img_menu" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_play_menu"
            app:layout_constraintVertical_bias="0.574"/>
    <Button
            android:text="@string/btn_play_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_play_menu" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_db_menu" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/btn_db_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_db_menu" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/txt_score_main" android:layout_marginBottom="16dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txt_score_main"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:fontFamily="monospace" android:textStyle="bold"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="1.0"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>