<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_name_main"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/txt_name_hint" android:fontFamily="monospace" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_person" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/btn_add_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:fontFamily="monospace" android:textStyle="bold"
            android:textSize="18sp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_main"/>
    <ImageView
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:contentDescription="Image of character"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_person"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_img"/>
    <Button
            android:text="@string/btn_save_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_person"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:fontFamily="monospace" android:textStyle="bold"
            android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>